        [ "PmenuSel", dark, lightest, "NONE" ],
        [ "PmenuThumb", darkest, darkest, "NONE" ],

        [ "FoldColumn", "NONE", dark, "NONE" ],
        [ "Folded", light, tarpit, "NONE" ],

        [ "WildMenu", lightsky, tarpit, "NONE" ],
        [ "SpecialKey", "NONE", light, "NONE" ],

        [ "DiffAdd", sky, tarpit, "NONE" ],
        [ "DiffChange", sky, tarpit, "NONE" ],
        [ "DiffDelete", sky, tarpit, "NONE" ],
