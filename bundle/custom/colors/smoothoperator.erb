    highlights = [
        [ "Normal", tarpit, lightest, "NONE" ],
        [ "NonText", tarpit, light, "NONE" ],

        [ "Comment", "NONE", dark, "NONE" ],
        [ "Constant", "NONE", lightsand, "NONE" ],
