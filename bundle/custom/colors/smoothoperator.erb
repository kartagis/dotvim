    sand      = ['#dfaf87', 180, 3]
    lightsand = ['#ffdfaf', 223, 11]

    yellow    = ['#ffdf5f', 221, 11]
    red       = ['#d70000', 160, 9]
    green     = ['#00af5f', 35, 10]
    violet    = ['#8787af', 103, 13]
    cyan      = ['#00afaf', 37, 14]

    # Step 3: highlights
