	/* start Tablets (landscape) */
	@media only screen and (min-width : 768px) and (max-width : 1024px) and (orientation : landscape) {
		${1}
	}
	/* end Tablets (landscape) */
snippet mq Tablets (portrait)
	/* start Tablets (portrait) */
